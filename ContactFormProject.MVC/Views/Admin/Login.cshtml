<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card" style="border:solid 1px grey; border-radius:10px; background-color:#CECECE">
                <div class="card-header fontText" style="text-align:center; font-size:20px;  background-color: rgb(220,220,220)">
                    Giriş Yap
                </div>
                <div class="card-body">
                    <form method="post" action="/Admin/Login">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                Kullanıcı adı veya şifre hatalı. Lütfen yeniden deneyiniz
                            </div>
                        }

                        <div class="form-group row mt-3">
                            <label for="Username" class="col-sm-3 col-form-label fontText">Kullanıcı Adı:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="Username" maxlength="50" required>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label for="Password" class="col-sm-3 col-form-label fontText">Şifre:</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" name="Password" maxlength="50" required>
                            </div>
                        </div>
                       
                        <div class="form-group row mt-3">
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-success">Giriş Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>

@section Scripts
{
<script>
    $(document).ready(function () {
        $('form').submit(function (event) {
            // Boş alanları kontrol et
            var username = $('input[name="Username"]').val();
            var password = $('input[name="Password"]').val();

            if (username.trim() === '' || password.trim() === '') {
                event.preventDefault(); // Formun gönderilmesini engelle
                $('.alert').show(); // Uyarı mesajını göster
            }
        });
    });
</script>
}